<?xml version="1.0" encoding="UTF-8"?>
<database name="solarrac_website" defaultIdMethod="native">
  <table name="Users" phpName="User">
    <column name="Id" type="varchar" size="10" required="true" primaryKey="true"/>
    <column name="Access" type="integer" defaultValue ="10"/>
  </table>
  <table name="BlogPosts" phpName="BlogPost">
    <column name="Id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
    <column name="Title" type="longvarchar" required="true"/>
    <column name="Body" type="clob" required="true"/>
    <column name="Author" type="varchar" size="10" required="true"/>
    <foreign-key foreignTable="Users">
      <reference local="Author" foreign="Id"/>
    </foreign-key>
  </table>
</database>