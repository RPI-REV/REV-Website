{
  "name": "REV-Website",
  "version": "0.0.4",
  "description": "The website for Rensselaer Electric Vehicle",
  "license": "MIT",
  "authors": [{
    "name": "Ryan Delaney",
    "email": "delanr3@rpi.edu",
    "role": "Lead Developer"
  },{
    "name": "Andrew Marumoto",
    "email": "maruma@rpi.edu",
    "role": "Developer"
  }],
  "require": {
    "silex/silex": "1.2.1",
    "twig/twig": "1.16.0",
    "propel/propel": "~2.0@dev",
    "coffeescript/coffeescript": "dev-master",
    "jbinfo/mobile-detect-service-provider": "~1",
    "mthaml/silex-mthaml": "dev-master",
    "tedivm/jshrink": "~1.0",
    "natxet/CssMin": "dev-master",
    "richthegeek/phpsass": "dev-master",
    "igorw/config-service-provider": "1.2.*@dev",
    "jasig/phpcas": "1.3.*@dev",
    "symfony/twig-bridge": "~2.3",
    "intervention/image": "dev-master"
  },
  "scripts": {
    "pre-update-cmd": "php -r \"@mkdir('app/propel/generated-classes');\"",
    "pre-install-cmd": "php -r \"@mkdir('app/propel/generated-classes');\"",
    "start": "php -S localhost:8000 -t public_html",
    "sql-build": "\"vendor/bin/propel\" sql:build --input-dir=\"app/propel\" --output-dir=\"app/propel/generated-sql\"",
    "sql-deploy": "\"vendor/bin/propel\" sql:insert --input-dir=\"app/propel\" --sql-dir=\"app/propel/generated-sql\"",
    "sql-diff": "\"vendor/bin/propel\" diff --input-dir=\"app/propel\" --output-dir=\"app/propel/generated-migration\"",
    "sql-migrate": "\"vendor/bin/propel\" migrate --input-dir=\"app/propel/generated-migration\" --output-dir=\"app/propel/generated-migration\"",
    "model-build": "\"vendor/bin/propel\" model:build --input-dir=\"app/propel\" --output-dir=\"app/propel/generated-classes\"",
    "config-build": "\"vendor/bin/propel\" config:convert --input-dir=\"app/propel\" --output-dir=\"app/propel/generated-conf\"",
    "delete-cache": "php -r \"function rrmdir($dir){if(is_dir($dir)){$objects = scandir($dir);foreach($objects as $object){if($object != '.' && $object != '..'){if(filetype($dir.'/'.$object) == 'dir'){rrmdir($dir.'/'.$object);}else{unlink($dir.'/'.$object);}}}reset($objects);rmdir($dir);}}rrmdir(__DIR__.'/app/assets/cache');\"",
    "build": [
      "echo *** clearing cache",
      "composer delete-cache",
      "echo *** creating cache",
      "php -r \"@mkdir('app/assets/cache');\"",
      "echo *** ensuring js directory",
      "php -r \"@mkdir('app/assets/js');\"",
      "echo *** creating js cache",
      "php -r \"@mkdir('app/assets/cache/js');\"",
      "echo *** ensuring coffee directory",
      "php -r \"@mkdir('app/assets/coffee');\"",
      "echo *** creating coffee cache",
      "php -r \"@mkdir('app/assets/cache/coffee');\"",
      "echo *** ensuring css directory",
      "php -r \"@mkdir('app/assets/css');\"",
      "echo *** creating css cache",
      "php -r \"@mkdir('app/assets/cache/css');\"",
      "echo *** ensuring sass directory",
      "php -r \"@mkdir('app/assets/sass');\"",
      "echo *** creating sass cache",
      "php -r \"@mkdir('app/assets/cache/sass');\"",
      "echo *** ensuring image directory",
      "php -r \"@mkdir('app/assets/image');\"",
      "echo *** creating image cache",
      "php -r \"@mkdir('app/assets/cache/image');\"",
      "echo *** building sql...",
      "php -r \"@unlink('app/propel/generated-sql/sqldb.map');\"",
      "composer sql-build",
      "echo *** building models...",
      "composer model-build",
      "echo *** building config...",
      "composer config-build",
      "echo *** dumping autoload",
      "composer dump-autoload"]
  },
  "autoload": {
    "classmap": ["app/propel/generated-classes/"]
  }
}